<div class="fix-width landing">
    <%= form_for :user, url: '/users' do |f| %>
      <%= f.label :username %><br>
      <%= f.text_field :username, class: "full-width form-control input", placeholder: 'Username', required: true  %><br>
        <%= f.email_field :email, class: "full-width form-control hidden input", placeholder: 'Email', required: true %>

      <%= f.label :password %><br>
      <%= f.password_field :password, class: "full-width form-control input", placeholder: 'Password', required: true %><br>

      <%= f.submit 'Sign Up', id: "signup-button", class: "form_submit_button btn btn-info full-width C input"%>
    <% end %>
    <br>
    <p><%= link_to "Go back", "/", class: "back" %> </p>
</div>
